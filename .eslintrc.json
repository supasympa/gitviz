{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": ["recommended/esnext", "recommended/node", "prettier"],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 2018
    },
    "plugins": [
        "prettier",
        "react"
    ],
    "rules": {
        "no-undef": "error",
        "import/no-commonjs": "off",
        "import/no-nodejs-modules": "off"
    }
}
